<p style="color: green"><%= notice %></p>
<div class="container">
<%= link_to "Back to tasks", tasks_path %>

<div class="card m-3">
  <div class="card-body">
  <span class="badge bg-<%= @task.badge_color %> "><%= @task.status %></span>
    <h3 class='card-title d-flex justify-content-between '>
      <span><%= @task.title %></span>
      <div>
        <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-light' %>
        <%= link_to 'Destroy', @task, method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure?' } %>
      </div>
    </h3>  
    <p> <%= @task.description %> </p>
    <p> <%= @task.deadline %> </p>

  </div>
</div>

</div>


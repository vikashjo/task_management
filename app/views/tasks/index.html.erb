<div class="card">
  <div class="card-body">
    <h3 class='card-title d-flex justify-content-between mb-4'>
      <span>Your Tasks</span>
      <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
    </h3>

    <% @tasks.each do |task| %>
      <%= link_to task, class:  "text-decoration-none" do %>
        <div class="card">
          <div class="card-body">
          <span class="badge bg-<%= task.badge_color %> mb-4"><%= task.status %></span>
            <h4 class='card-title d-flex justify-content-between mb-4'> <%= task.title %> </h4>
            <p class='text-secondary'> <%= task.description %> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



